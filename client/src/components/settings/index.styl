.settings {
  & { // Base
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;

    visibility: hidden;

    box-shadow: 0;
    transition: box-shadow .25s ease;

    &__content {
      position: relative;
      opacity: 0;
      transition: opacity .125s .125s ease;

      // Yup a golden rule here. Why not.
      height: 66vmin;
      width: @height * 1.414;
      margin: auto;

      background-color: rgba(white, .5);
      border: .2em solid rgba(black, .5);
      border-radius: .1em;

      display: flex;
      flex-direction: column;
    }

    &__player {
      margin: auto 0
      text-align: center;
    }

    &__toggle {
      position: absolute;
      top: 0;
      right: 0;

      font-size: 2em;

      &--onClosed {
        visibility: visible;
        transform: translate(-50%,50%);
      }
      &--onOpened {
        transform: translate(50%,-50%);
      }
    }
  }

  & { // States
    &:target {
      visibility: visible;
      box-shadow: inset 0 0 25vmax 25vmax rgba(mix(white, black), .5);
    }
    &:target &__content {
      opacity: 1;
    }
    &:target &__toggle {
      &--onClosed {
        visibility: hidden;
      }
    }
  }

}
