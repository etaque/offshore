.settings {
  & { // Base
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;

    box-shadow: 0;
    transition: box-shadow .5s ease;

    &__content {
      display: none;
      position: relative;
      opacity: 0;
      transition: opacity .25s .25s ease;

      // Yup a golden rule here. Why not.
      height: 66vmin;
      width: @height * 1.414;
      margin: auto;

      background-color: rgba(white, .5);
      border: .2em solid rgba(black, .5);
      border-radius: .1em;
    }

    &__toggle {
      position: absolute;
      top: 0;
      right: 0;

      font-size: 2em;

      &--onClosed {
        display: inline-block;
        transform: translate(-50%,50%);
      }
      &--onOpened {
        display: none;
        transform: translate(50%,-50%);
      }
    }
  }

  & { // States
    &:target {
      box-shadow: inset 0 0 25vmax 25vmax rgba(mix(white, black), .5);
    }
    &:target &__content {
      display: block;
      opacity: 1;
    }
    &:target &__toggle {
      &--onClosed {
        display: none;
      }
      &--onOpened {
        display: inline-block;
      }
    }
  }

}
